<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiApp2.Menu"
             BackgroundImageSource="background.jpg">

    <VerticalStackLayout Spacing="60" VerticalOptions="Center">

        <Button x:Name="btnRegistered" 
                Text="Start" 
                Clicked="Start_Clicked" 
                TextColor="#ee82ee"
                BackgroundColor="#800080"
                HorizontalOptions="Center"/>

        <Button x:Name="btnHistory" 
                Text="History" 
                Clicked="History_Clicked" 
                HorizontalOptions="Center"/>

        <Button x:Name="btnDelete" 
                Text="Delete User" 
                Clicked="DeleteUser_Clicked" 
                HorizontalOptions="Center"/>

        <Button x:Name="btnExit" 
                Text="Exit" 
                Clicked="Exit_Clicked" 
                HorizontalOptions="Center"/>

    </VerticalStackLayout>
</ContentPage>